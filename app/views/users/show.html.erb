<% provide(:title, full_name(@user)) %>
<div class="row">
  <aside class="col-md-6">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: 50 %>
        <%= full_name(@user) %>
      </h1>
    </section>
  </aside>
  <div class="col-md-6">
    <% if @user.posts.any? %>
      <h3>Posts (<%= @user.posts.count %>)</h3>
      <ol class="posts">
        <%= render @posts %>
      </ol>
      <%= will_paginate @posts %>
    <% end %>
  </div>
</div>